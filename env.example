# Backend Environment Variables
# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_dev_platform
SYNC_DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_dev_platform

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI/LLM APIs
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxx
GOOGLE_API_KEY=AIzaxxxxxxxxxxxxx

# Email Service
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# Container Management
DOCKER_HOST=unix:///var/run/docker.sock
ORBSTACK_SOCKET=/var/run/orbstack.sock
CONTAINER_NETWORK=ai_dev_platform_network
DEFAULT_CPU_LIMIT=2
DEFAULT_MEMORY_LIMIT_MB=4096
DEFAULT_DISK_LIMIT_MB=10240

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME="AI Development Platform"
VERSION=0.1.0
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cost Tracking
MONTHLY_TOKEN_LIMIT_DEFAULT=1000000
MONTHLY_COST_LIMIT_DEFAULT=100.0

# Console Capture
MAX_CONSOLE_LOGS_PER_PROJECT=1000
CONSOLE_LOG_RETENTION_HOURS=24

# Frontend Environment Variables (for Vite)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_APP_NAME="AI Development Platform"
VITE_APP_VERSION=0.1.0 