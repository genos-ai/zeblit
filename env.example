# AI Development Platform - Environment Variables
# Copy this file to .env and update the values

# Application Settings
APP_NAME="AI Development Platform"
APP_URL="http://localhost:3000"
API_V1_STR="/api/v1"
DEBUG=true
ENVIRONMENT="development"

# CORS Settings
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# Database
DATABASE_URL="postgresql+asyncpg://herman.young@localhost:5432/ai_dev_platform"

# JWT Authentication
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email (Resend)
RESEND_API_KEY="re_your_actual_api_key"
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="AI Development Platform"

# Redis
REDIS_URL="redis://localhost:6379/0"

# AI API Keys
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_API_KEY="your-google-api-key"

# AI Model Selection
PRIMARY_MODEL="claude-3-sonnet-20240229"
COMPLEX_MODEL="claude-3-opus-20240229"

# Container Settings
CONTAINER_CPU_LIMIT="2"
CONTAINER_MEMORY_LIMIT="4g"
CONTAINER_STORAGE_LIMIT="10g"
CONTAINER_IDLE_TIMEOUT_MINUTES=30

# User Limits
DEFAULT_MONTHLY_TOKEN_LIMIT=1000000
DEFAULT_MONTHLY_COST_LIMIT_USD=50.0

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Frontend Configuration (if needed)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_APP_NAME="AI Development Platform"
VITE_APP_VERSION=0.1.0 