# AI Development Platform Environment Variables
# Copy this file to .env and update the values

# Application Settings
APP_NAME="AI Development Platform"
APP_URL="http://localhost:3000"
API_V1_STR="/api/v1"
DEBUG=true
ENVIRONMENT="development"

# CORS Settings
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# Database
DATABASE_URL="postgresql+asyncpg://herman.young@localhost:5432/ai_dev_platform"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email (Resend)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM_ADDRESS=noreply@aidevplatform.com
EMAIL_FROM_NAME="AI Development Platform"

# Redis
REDIS_URL="redis://localhost:6379/0"
# REDIS_PASSWORD=your_redis_password_if_needed
# REDIS_DB=0
# REDIS_MAX_CONNECTIONS=20

# LLM Providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
DEFAULT_LLM_PROVIDER=anthropic

# AI Agent Settings
AGENT_DEFAULT_MODEL=claude-3-sonnet
AGENT_COMPLEX_MODEL=claude-3-opus
AGENT_MAX_TOKENS=4096
AGENT_TEMPERATURE=0.7

# AI Model Selection
PRIMARY_MODEL="claude-sonnet-4-20250514"
COMPLEX_MODEL="claude-opus-4-20250514"

# Container Settings
CONTAINER_CPU_LIMIT="2"
CONTAINER_MEMORY_LIMIT="4g"
CONTAINER_STORAGE_LIMIT="10g"
CONTAINER_IDLE_TIMEOUT_MINUTES=30

# User Limits
DEFAULT_MONTHLY_TOKEN_LIMIT=1000000
DEFAULT_MONTHLY_COST_LIMIT_USD=50.0

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Frontend Configuration (if needed)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_APP_NAME="AI Development Platform"
VITE_APP_VERSION=0.1.0